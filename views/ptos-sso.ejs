                        <h2 class="text-4xl font-bold mb-8 tracking-tight leading-tight" id="feature-title">Secure
                            Single Sign-On</h2>
                        <p class="text-lg text-[#68706C] dark:text-[#A8B0AA] leading-relaxed" id="feature-description">
                            A unified login portal providing secure access across the entire Terminal Operating System
                            ecosystem with a single set of credentials.
                        </p>
                    </div>
                    <div class="mt-auto space-y-10 border-t border-[#0B130F]/10 dark:border-white/10 pt-12">
                        <div class="grid grid-cols-2 gap-y-10">
                            <div>
                                <span
                                    class="text-[10px] font-black tracking-[0.25em] text-[#68706C] uppercase block mb-3">Role</span>
                                <p class="text-sm font-bold uppercase tracking-tight">UI/UX Designer</p>
                            </div>
                            <div>
                                <span
                                    class="text-[10px] font-black tracking-[0.25em] text-[#68706C] uppercase block mb-3">Timeline</span>
                                <p class="text-sm font-bold uppercase tracking-tight">1 Month</p>
                            </div>
                            <div class="col-span-2">
                                <span
                                    class="text-[10px] font-black tracking-[0.25em] text-[#68706C] uppercase block mb-3">Tools</span>
                                <p class="text-sm font-bold uppercase tracking-tight">Figma, Adobe Suite, Visual Studio
                                    IDE</p>
                            </div>
                        </div>
                    </div>
                </div>
            </aside>
        </div>
    </main>
    <script>
        const projectData = [
            {
                title: "Secure Single Sign-On",
                description: "A unified login portal providing secure access across the entire Terminal Operating System ecosystem with a single set of credentials.",
                image: "/assets/login sso.png"
            },
            {
                title: "All-in-One Operational Hub",
                description: "Your centralized starting point for every task. Secure, intuitive, and ready to move when you are.",
                image: "/assets/main sso.png"
            },
            {
                title: "Switch Modules Seamlessly",
                description: "Explore the PTOS ecosystem. Launch specialized apps for different terminal needs with just a single click.",
                image: "/assets/main expanded sso.png"
            }
        ];
        let currentIndex = 0;
        function updateCarousel(index) {
            currentIndex = index;
            const content = projectData[index];
            const mainImg = document.getElementById('main-carousel-image');
            const mainArea = document.getElementById('main-content-area');
            const title = document.getElementById('feature-title');
            const desc = document.getElementById('feature-description');
            mainArea.style.opacity = '0';
            setTimeout(() => {
                mainImg.src = content.image;
                title.textContent = content.title;
                desc.textContent = content.description;
                mainArea.style.opacity = '1';
                document.querySelectorAll('.carousel-thumb-btn').forEach((btn, i) => {
                    if (i === index) {
                        btn.classList.add('active');
                    } else {
                        btn.classList.remove('active');
                    }
                });
            }, 150);
        }
        function nextSlide() {
            let nextIndex = (currentIndex + 1) % projectData.length;
            updateCarousel(nextIndex);
        }
        // Dark mode persistence
        function initDarkMode() {
            const isDark = localStorage.getItem('darkMode') === 'true';
            if (isDark) {
                document.documentElement.classList.add('dark');
            }
        }

        const themeToggle = document.getElementById('theme-toggle');
        themeToggle.addEventListener('click', () => {
            document.documentElement.classList.toggle('dark');
            const isDark = document.documentElement.classList.contains('dark');
            localStorage.setItem('darkMode', isDark);
        });

        initDarkMode();
        updateCarousel(0);
    </script>

    <!-- Image Lightbox Modal -->
    <div id="image-lightbox"
        class="fixed inset-0 z-[60] bg-black/90 backdrop-blur-sm hidden opacity-0 transition-opacity duration-300 flex flex-col items-center justify-center p-4 cursor-zoom-out">
        <!-- Navigation Arrows -->
        <button id="lightbox-prev"
            class="absolute left-6 top-1/2 -translate-y-1/2 text-white/70 hover:text-white z-10 transition-colors p-3 bg-black/20 rounded-full backdrop-blur-md">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
        </button>
        <button id="lightbox-next"
            class="absolute right-6 top-1/2 -translate-y-1/2 text-white/70 hover:text-white z-10 transition-colors p-3 bg-black/20 rounded-full backdrop-blur-md">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
        </button>
        <div class="relative w-full max-w-7xl flex-1 flex items-center justify-center min-h-0">
            <div class="relative inline-block">
                <img id="lightbox-image" src="" alt="Expanded Work"
                    class="max-w-full max-h-[85vh] object-contain scale-95 transition-transform duration-300 rounded-lg shadow-2xl cursor-default select-none"
                    onclick="event.stopPropagation()" />
                <button id="lightbox-close"
                    class="absolute top-4 right-4 text-white/80 hover:text-white z-20 transition-colors p-2 bg-black/50 rounded-full backdrop-blur-md"
                    onclick="event.stopPropagation()">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12">
                        </path>
                    </svg>
                </button>
            </div>
        </div>
        <!-- Thumbnail Gallery Strip -->
        <div id="lightbox-gallery-strip"
            class="w-fit max-w-4xl h-20 mt-4 flex items-center justify-start gap-4 overflow-x-auto px-4 pb-2 z-10"
            onclick="event.stopPropagation()">
        </div>
    </div>

    <script>
        // Lightbox Logic
        const lightbox = document.getElementById('image-lightbox');
        const lightboxImg = document.getElementById('lightbox-image');
        const lightboxCloseBtn = document.getElementById('lightbox-close');
        const lightboxPrevBtn = document.getElementById('lightbox-prev');
        const lightboxNextBtn = document.getElementById('lightbox-next');
        const lightboxGalleryStrip = document.getElementById('lightbox-gallery-strip');
        let lightboxIndex = 0;

        function openLightbox(index) {
            lightboxIndex = index;
            updateLightboxImage();
            lightbox.classList.remove('hidden');
            void lightbox.offsetWidth;
            lightbox.classList.remove('opacity-0');
            lightboxImg.classList.remove('scale-95');
            lightboxImg.classList.add('scale-100');
            document.body.classList.add('overflow-hidden');
        }

        function closeLightbox() {
            lightbox.classList.add('opacity-0');
            lightboxImg.classList.remove('scale-100');
            lightboxImg.classList.add('scale-95');
            setTimeout(() => {
                lightbox.classList.add('hidden');
                document.body.classList.remove('overflow-hidden');
            }, 300);
        }

        function updateLightboxImage() {
            const content = projectData[lightboxIndex];
            lightboxImg.src = content.image;

            // Update gallery strip
            lightboxGalleryStrip.innerHTML = '';
            projectData.forEach((item, i) => {
                const thumbBtn = document.createElement('button');
                thumbBtn.className = `w-16 h-16 rounded-lg overflow-hidden border-2 transition-all ${i === lightboxIndex ? 'border-white opacity-100 scale-105' : 'border-transparent opacity-60 hover:opacity-100'}`;
                const thumbImg = document.createElement('img');
                thumbImg.src = item.image;
                thumbImg.className = 'w-full h-full object-cover';
                thumbBtn.appendChild(thumbImg);
                thumbBtn.onclick = () => {
                    lightboxIndex = i;
                    lightboxImg.classList.add('opacity-50');
                    setTimeout(() => {
                        updateLightboxImage();
                        lightboxImg.classList.remove('opacity-50');
                    }, 150);
                };
                lightboxGalleryStrip.appendChild(thumbBtn);
            });
        }

        function lightboxPrev() {
            lightboxIndex = (lightboxIndex - 1 + projectData.length) % projectData.length;
            lightboxImg.classList.add('opacity-50');
            setTimeout(() => {
                updateLightboxImage();
                lightboxImg.classList.remove('opacity-50');
            }, 150);
        }

        function lightboxNext() {
            lightboxIndex = (lightboxIndex + 1) % projectData.length;
            lightboxImg.classList.add('opacity-50');
            setTimeout(() => {
                updateLightboxImage();
                lightboxImg.classList.remove('opacity-50');
            }, 150);
        }

        lightboxCloseBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            closeLightbox();
        });

        lightboxPrevBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            lightboxPrev();
        });

        lightboxNextBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            lightboxNext();
        });

        lightbox.addEventListener('click', (e) => {
            if (e.target === lightbox) {
                closeLightbox();
            }
        });

        document.addEventListener('keydown', (e) => {
            if (!lightbox.classList.contains('hidden')) {
                if (e.key === 'Escape') closeLightbox();
                if (e.key === 'ArrowLeft') lightboxPrev();
                if (e.key === 'ArrowRight') lightboxNext();
            }
        });
    </script>

</body>

