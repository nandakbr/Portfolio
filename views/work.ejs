    <script>
        const observerOptions = {
            threshold: 0.1
        };
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('opacity-100', 'translate-y-0');
                    entry.target.classList.remove('opacity-0', 'translate-y-10');
                }
            });
        }, observerOptions);
        document.querySelectorAll('section').forEach(section => {
            section.classList.add('transition-all', 'duration-1000', 'opacity-0', 'translate-y-10');
            observer.observe(section);
        });

        // Dark mode persistence
        function initDarkMode() {
            const isDark = localStorage.getItem('darkMode') === 'true';
            if (isDark) {
                document.documentElement.classList.add('dark');
            }
        }

        function toggleDarkMode() {
            document.documentElement.classList.toggle('dark');
            const isDark = document.documentElement.classList.contains('dark');
            localStorage.setItem('darkMode', isDark);
        }

        initDarkMode();

        // Image Expansion Logic
        const modal = document.getElementById('image-modal');
        const modalImg = document.getElementById('modal-image');
        const closeBtn = document.getElementById('modal-close');
        const galleryStrip = document.getElementById('gallery-strip');

        // Add click listeners to work gallery images
        document.querySelectorAll('#work-gallery .group img').forEach(img => {
            img.style.cursor = 'zoom-in';
            const container = img.closest('.group');

            // UI Design Project 1 (ui1.png) - Open PTOSM Lightbox
            if (img.getAttribute('alt') === 'UI Design Project 1') {
                img.style.cursor = 'pointer';
                container.addEventListener('click', (e) => {
                    e.preventDefault();
                    openIframeModal('/ptosm');
                });
                return; // Skip gallery setup for this item
            }

            // UI Design Project 2 (ui2.png) - Open PTOS-SSO Lightbox
            if (img.getAttribute('alt') === 'UI Design Project 2') {
                img.style.cursor = 'pointer';
                container.addEventListener('click', (e) => {
                    e.preventDefault();
                    openIframeModal('/ptos-sso');
                });
                return; // Skip gallery setup for this item
            }

            container.addEventListener('click', (e) => {
                e.preventDefault();
                const galleryData = container.dataset.gallery ? JSON.parse(container.dataset.gallery) : null;
                openModal(img.src, galleryData);
            });
        });

        function openModal(src, galleryData) {
            modalImg.src = src;

            // Handle Gallery Strip
            galleryStrip.innerHTML = '';
            if (galleryData && galleryData.length > 1) {
                galleryStrip.classList.remove('hidden');
                galleryStrip.classList.add('flex');

                galleryData.forEach(itemSrc => {
                    const thumbBtn = document.createElement('button');
                    thumbBtn.className = `w-16 h-16 rounded-lg overflow-hidden border-2 transition-all ${itemSrc === src ? 'border-white opacity-100 scale-105' : 'border-transparent opacity-60 hover:opacity-100'}`;

                    const thumbImg = document.createElement('img');
                    thumbImg.src = itemSrc;
                    thumbImg.className = 'w-full h-full object-cover';

                    thumbBtn.appendChild(thumbImg);
                    thumbBtn.onclick = () => {
                        // Update Main Image
                        modalImg.classList.add('opacity-50');
                        setTimeout(() => {
                            modalImg.src = itemSrc;
                            modalImg.classList.remove('opacity-50');
                        }, 150);

                        // Update Active State
                        Array.from(galleryStrip.children).forEach(child => {
                            child.className = 'w-16 h-16 rounded-lg overflow-hidden border-2 border-transparent opacity-60 hover:opacity-100 transition-all';
                        });
                        thumbBtn.className = 'w-16 h-16 rounded-lg overflow-hidden border-2 border-white opacity-100 scale-105 transition-all';
                    };

                    galleryStrip.appendChild(thumbBtn);
                });
            } else {
                galleryStrip.classList.add('hidden');
                galleryStrip.classList.remove('flex');
            }

            modal.classList.remove('hidden');
            // Force reflow
            void modal.offsetWidth;
            modal.classList.remove('opacity-0');
            modalImg.classList.remove('scale-95');
            modalImg.classList.add('scale-100');
            document.body.classList.add('overflow-hidden');
        }

        function closeModal() {
            modal.classList.add('opacity-0');
            modalImg.classList.remove('scale-100');
            modalImg.classList.add('scale-95');

            setTimeout(() => {
                modal.classList.add('hidden');
                modalImg.src = '';
                galleryStrip.innerHTML = ''; // Clean up
                document.body.classList.remove('overflow-hidden');
            }, 300);
        }

        // Close on button click
        closeBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            closeModal();
        });

        // Close on background click
        modal.addEventListener('click', (e) => {
            if (e.target === modal || e.target.closest('#gallery-strip') === null && e.target !== modalImg) {
                closeModal();
            }
        });

        // Close on Escape key
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
                closeModal();
            }
            if (e.key === 'Escape' && !iframeModal.classList.contains('hidden')) {
                closeIframeModal();
            }
        });

        // Iframe Modal Logic (for PTOSM and SSO)
        const iframeModal = document.getElementById('ptosm-modal');
        const iframeElement = document.getElementById('ptosm-iframe');
        const iframeCloseBtn = document.getElementById('ptosm-modal-close');

        function openIframeModal(url) {
            iframeElement.src = url;
            iframeModal.classList.remove('hidden');
            // Force reflow
            void iframeModal.offsetWidth;
            iframeModal.classList.remove('opacity-0');
            document.body.classList.add('overflow-hidden');
        }

        function closeIframeModal() {
            iframeModal.classList.add('opacity-0');
            setTimeout(() => {
                iframeModal.classList.add('hidden');
                iframeElement.src = ''; // Clean up
                document.body.classList.remove('overflow-hidden');
            }, 300);
        }

        // Close on button click
        iframeCloseBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            closeIframeModal();
        });

        // Close on background click
        iframeModal.addEventListener('click', (e) => {
            if (e.target === iframeModal) {
                closeIframeModal();
            }
        });
    </script>

